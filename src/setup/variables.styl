$font-size = (12px 14px 16px 18px 20px 24px 28px 32px 42px 48px 54px 60px 68px 76px)

/**
 * font and elements sizes
 */
$font-xs ?= rem($font-size[0])
$font-sm ?= rem($font-size[1])
$font-md ?= rem($font-size[2])
$font-lg ?= rem($font-size[3])
$font-xl ?= rem($font-size[4])


/**
 * Device Breakpoint
 */
$screen-xs ?= 0
$screen-sm ?= 768px
$screen-md ?= 991px
$screen-lg ?= 1360px
$screen-xl ?= 1920px

/**
 * container sizes
 */
$container-xs ?= 100%
$container-sm ?= $screen-sm - (22 * 2)
$container-md ?= $screen-md - (22 * 3)
$container-lg ?= $screen-lg - (22 * 4)
$container-xl ?= $screen-xl - (22 * 5)

/**
 * typography
 */
$lineheight ?= 1.1875
$font-weight-light ?= 300
$font-weight-normal ?= 400
$font-weight-medium ?= 500
$font-weight-semi-bold ?= 600
$font-weight-bold ?= 700
$font-weight-heavy ?= 800
$font-weight-super ?= 900

/**
 * grid
 */
$columns ?= 12
$dir ?= ltr
$gutter ?= rem(10px)
$gutter-full ?= 8vw
$round-digits ?= 4
/*
 * style
 */
$margin ?= 1em
$padding ?= 0.5em
$padding-px ?= 20px
$modal-spacing ?= 2em
$border-radius ?= 6px
$border ?= 1px
$outline ?= 3px
$outline-opacity ?= 25%
$element-lineheight ?= 1.3
/**
 * Shadows
 */

$shadow-xs ?= 2px 2px 2px alpha($dark, 30%), -2px -2px 2px alpha($white, 70%)
$shadow-sm ?= 4px 4px 6px alpha($dark, 30%), -4px -4px 6px alpha($white, 70%)
$shadow-md ?= 8px 8px 14px alpha($dark, 30%), -8px -8px 14px alpha($white, 70%)
$shadow-lg ?= 10px 10px 18px alpha($dark, 30%), -10px -10px 18px alpha($white, 70%)
$shadow-xl ?= 12px 12px 22px alpha($dark, 30%), -12px -12px 22px alpha($white, 70%)

$shadow-emboss ?= inset 1px 1px 1px alpha($light, 70%)
$shadow-deboss ?= inset 1px 2px 6px -2px alpha($dark, 70%)
$shadow-outline ?= 0 0 0 $outline alpha($primary, $outline-opacity)

/**
 * transition
 */
$transition-time ?= 0.2s
$transition-function ?= ease-in-out
/**
 * modifiers
 */
$modifiers-size ?= 'xs' 'sm' 'md' 'lg' 'xl'
$modifiers-style ?= 'block' 'disabled' 'rounded'
$modifiers-color ?= 'dark' 'light'
$modifiers-color-grad ?= 'primary' 'secondary' 'info' 'success' 'warning' 'danger'